@using BlazorInputFile

@if (!uploadComplete)
{  
    @if (ShowCustomButton)
    {
        <label>
            <InputFile InputFileClassName="@InputFileClassName" OnChange="HandleSelection" Visible="@Visible" />
             <span class="@CustomButtonClassName">
                <span class="@CustomButtonTextClassName">@ButtonText</span>
            </span>
        </label>
    }
    else
    {
        <div class="inputfilecontainer">
            <InputFile InputFileClassName="@InputFileClassName" Visible="@Visible" OnChange="HandleSelection" />
        </div>    
    }
}
else if (ShowResetButton)
{
    <button class="@ResetButtonClassName" @onclick="Reset">@ResetButtonText</button>
}

@if ((ShowStatus) && (HasStatus))
{
    <p class="@MessageClassName">@status</p>
}

